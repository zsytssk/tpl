{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "module": "ESNext",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es7", "dom"],
    "jsx": "react",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["src"]
}
